{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015",
      "dom",
      "es2019"
    ],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": [
      "node",
      "core-js",
      "yargs",
      "nodegit"
    ],
    "removeComments": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceRoot": "src",
    "listEmittedFiles": true
  },
  "compileOnSave": true
}
